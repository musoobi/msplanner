{
  "name": "msplanner-integration",
  "version": "0.1.0",
  "description": "Microsoft Planner integration using Microsoft Graph API",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:planner": "jest --testPathPattern=planner",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "version:patch": "./scripts/version.sh patch",
    "version:minor": "./scripts/version.sh minor",
    "version:major": "./scripts/version.sh major",
    "version:show": "./scripts/version.sh show",
    "prepare": "husky install",
    "build": "echo 'Build process for Planner integration'",
    "deploy": "echo 'Deploy Planner integration'",
    "planner:sync": "node src/scripts/sync-planner.js",
    "planner:backup": "node src/scripts/backup-plans.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/musoobi/msplanner.git"
  },
  "keywords": [
    "microsoft-planner",
    "microsoft-graph",
    "office365",
    "planner",
    "tasks",
    "project-management",
    "microsoft-365"
  ],
  "author": "musoobi <your.email@example.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/musoobi/msplanner/issues"
  },
  "homepage": "https://github.com/musoobi/msplanner#readme",
  "dependencies": {
    "@azure/msal-node": "^2.0.0",
    "@microsoft/microsoft-graph-client": "^3.0.0",
    "axios": "^1.0.0",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "jest": "^29.0.0",
    "nodemon": "^3.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "@types/jest": "^29.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
